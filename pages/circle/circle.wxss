.box {
  display: inline-block;
  width: 33.33%;
}

.circle-text { 
  position: absolute;  
  left: 50%;
  top: 50%; 
  transform: translate(-50%,-50%); 
}

.circle-time {  
  color: #fff;
  font-size: 32rpx;
  padding-left: 16rpx; 
} 

.circle-info {
  position: absolute; 
  width: 100%;
  left: 50%;
  top: 50%; 
  transform: translate(-50%,-50%); 
  display: flex;  
  align-items: center;
  justify-content: center
}

.circle-dot {
  width:16rpx;
  height: 16rpx;  
  border-radius: 50%;
  background-color: #fb9126;
} 

.circle-txt {
  padding-left: 10rpx;
  color: #fff;
  font-size: 36rpx; 
  letter-spacing: 2rpx;
}
